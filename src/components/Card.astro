---
interface Props {
	title: string;
	description: string;
	href: string;
	borderSide: "left" | "right";
	last?: "last";
}

const { href, title, description, borderSide, last } = Astro.props;
---

<div class="card">
	<div class:list={["content", borderSide, last]} >
		<h2>
				<a href={href}>
				{title}
			</a>
			</h2>
			<p>
				{description}
			</p>
			<slot></slot>
	</div>
</div>
<style>
	.card {
		position: relative;
	}
	.content {
		display: flex;
		flex-direction: column;
		padding-block: 48px;
		background-color: var(--background-color);
		border-radius: 1000vw;
	}
	.content.left {
		padding-left: 64px;
	}
	.content.right {
		padding-right: 64px;
	}
	.content::before {
		content: "";
		position: absolute;
		z-index: -1;
		width: calc(50% + 20px);
		top: calc(var(--strip-width) * -1);
		bottom: calc(var(--strip-width) * -1);
		background-color: var(--accent-color);
		background: linear-gradient(0deg, rgba(203,116,6,1) 10%, rgba(255,232,207,1) 45%, rgba(255,232,207,1) 55%, rgba(203,116,6,1) 90%);
		}
	.content.left::before {
		left: calc(var(--strip-width) * -1);
		border-top-left-radius: 1000vw;
		border-bottom-left-radius: 1000vw;
	}
	.content.right::before {
		right: calc(var(--strip-width) * -1);
		border-top-right-radius: 1000vw;
		border-bottom-right-radius: 1000vw;
	}
	.content.last::before {
		bottom: 0;
	}
	h2 {
		margin: 0;
		font-size: 1.75rem;
		line-height: 1;
	}
	p {
		margin-top: 0.5rem;
		margin-bottom: 0;
	}
</style>
